<!DOCTYPE html>
<html>
<head>
  <title>Clothing Items</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f3f4f6;
      padding: 2rem;
    }

    h1 {
      text-align: center;
      margin-bottom: 1.5rem;
    }

    .top-right {
      position: absolute;
      top: 1rem;
      right: 1rem;
    }

    .bottom-right {
      position: fixed;
      bottom: 1rem;
      right: 1rem;
    }

    .btn {
      padding: 0.5rem 1rem;
      margin: 0.5rem 0;
      border: none;
      background-color: #3b82f6;
      color: white;
      border-radius: 5px;
      cursor: pointer;
    }

    .btn:hover {
      background-color: #2563eb;
    }

    ul {
      list-style-type: none;
      padding-left: 0;
      max-width: 800px;
      margin: auto;
    }

    li {
      background: white;
      padding: 1rem;
      margin: -0.8rem 0;
      border-radius: 6px;
      box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
    }

    p {
      text-align: center;
    }
  </style>
</head>
<body>

  <div class="top-right">
    <form action="/" method="GET">
      <button class="btn" type="submit">Sign Out</button>
    </form>
  </div>

  <h1>Clothing Items</h1>

  <% if (counts) { %>
    <div style="margin-bottom: 1rem; font-size: 1.2rem; display: flex; justify-content: center; gap: 2rem;">
      <p><strong>Outer Layers:</strong> <%= counts.outer_layer_count %></p>
      <p><strong>Inner Layers:</strong> <%= counts.inner_layer_count %></p>
      <p><strong>Lower Layers:</strong> <%= counts.lower_layer_count %></p>
    </div>
  <% } %>  

<div style="text-align: center; margin-bottom: 2rem;">
  <form action="/add-clothing" method="POST" style="display: flex; justify-content: center; align-items: center; flex-wrap: wrap; gap: 1rem;">
    <input type="hidden" name="userId" value="<%= userId %>">

    <input type="text" name="name" placeholder="Name" required style="padding: 0.5rem;">
    <input type="text" name="type" placeholder="Type" required style="padding: 0.5rem;">
    <input type="text" name="style" placeholder="Style" required style="padding: 0.5rem;">
    <input type="text" name="color" placeholder="Color" required style="padding: 0.5rem;">

    <button class="btn" type="submit" style="padding: 0.5rem 1rem;">Add Clothing Item</button>
  </form>
</div>

<div style="text-align: center; margin-bottom: 2rem;">
  <form action="/delete-clothing" method="POST" style="display: inline-flex; justify-content: center; align-items: center; gap: 0.5rem;">
    <input type="hidden" name="userId" value="<%= userId %>">
    <input type="text" name="name" placeholder="Name of item to delete" required style="padding: 0.5rem;">
    <button class="btn" type="submit" style="padding: 0.5rem 1rem;">Delete Clothing Item</button>
  </form>
</div>

<div style="text-align: center; margin-bottom: 2rem;">
  <form action="/search-clothing" method="POST" style="display: inline-flex; justify-content: center; align-items: center; gap: 0.5rem;">
    <input type="hidden" name="userId" value="<%= userId %>">
    <input type="text" name="keyword" placeholder="Search your clothes..." required style="padding: 0.5rem;">
    <button class="btn" type="submit" style="padding: 0.5rem 1rem;">Search</button>
  </form>
</div>

  <% if (error) { %>
    <p style="color: red;"><%= error %></p>
  <% } else if (items.length === 0) { %>
    <p>No clothing items found.</p>
  <% } else { %>
    <ul>
      <% items.forEach(item => { %>
        <li>
          <strong>Name:</strong> <%= item.name %> |
          <strong>Type:</strong> <%= item.type %> |
          <strong>Style:</strong> <%= item.style %> |
          <strong>Color:</strong> <%= item.color %>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <% if (success) { %>
    <p style="color: green;"><%= success %></p>
  <% } %>
  

  <div class="bottom-right">
    <form action="/dashboard" method="GET">
      <input type="hidden" name="userId" value="<%= userId %>">
      <button class="btn" type="submit">Dashboard</button>
    </form>
  </div>

</body>
</html>
